<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
	<properties>
		<property name="basePath">./src/test/resources/logs</property>
	</properties>
	<Appenders>
		<!-- Console Appender -->
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<!-- RollingFile Appender -->
		<RollingFile name="RollingFileLogger" fileName="${basePath}/app.log" filePattern="${basePath}/automation-%d{yyyy-MM-dd}-%i.log.gz">

			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</Pattern>
			</PatternLayout>

			<Policies>
				<!-- Rotate if file exceeds 10MB -->
				<SizeBasedTriggeringPolicy size="10MB" />
				<!-- Rotate daily -->
				<TimeBasedTriggeringPolicy interval="1" />
			</Policies>

			<DefaultRolloverStrategy max="90" />
		</RollingFile>
	</Appenders>
	<Loggers>
		<!-- Root Logger -->
		<Root level="info">
			<!--- ALL > TRACE DEBUG INFO ERROR WARN FATAL -->
			<!---<AppenderRef ref="Console" /-->
			<AppenderRef ref="RollingFileLogger" />
		</Root>
	</Loggers>
</Configuration>